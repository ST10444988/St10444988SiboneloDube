<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ageEditText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3F1BA16"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="405dp"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp">

        <TextView
            android:id="@+id/TextView"
            android:layout_width="407dp"
            android:layout_height="match_parent"
            android:fontFamily="cursive"
            android:text="The History App"
            android:textAlignment="center"
            android:textSize="34sp" />
    </FrameLayout>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Age : "
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="154dp" />

    <Button
        android:id="@+id/CompareButton"
        android:layout_width="148dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="248dp"
        android:background="#F8F7F0"
        android:text="Compare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="220dp" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="149dp"
        android:layout_height="36dp"
        android:text="Clear !"
        app:rippleColor="#FFFFFF"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="679dp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="406dp"
        android:layout_height="384dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"
        android:background="#FDF8F8"
        android:text="Nelson Mandela "
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/clearButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CompareButton"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="95 years"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="296dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nelson_mandela"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="325dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="174dp"
        android:layout_height="33dp"
        android:text="What is Nelson Mandela known for?"
        android:textColor="#EF0A0A"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="495dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="383dp"
        android:layout_height="104dp"
        android:text="Nelson Mandela is known for several things, but perhaps he is best known for successfully leading the resistance to South Africa's policy of apartheid in the 20th century, during which he was infamously incarcerated at Robben Island Prison (1964â€“82)."
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="541dp" />

</androidx.constraintlayout.widget.ConstraintLayout>